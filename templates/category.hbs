<h1>{{name}}</h1>

{{#if isEditing}}
  <div class="form-div">
    <form>
      <div class="form-control">
        <label class for="name">Category Name</label>
        {{input value=name id="name" class="form-control"}}
      </div>
    </form>
  </div>
    <div class="button-div">
      <button class="btn btn-success" {{action 'save'}}>Save</button>
    </div>

{{else}}

  <p>{{name}}</p>

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
  <button class="btn btn-sm btn-danger" {{action 'delete'}}>Delete Category</button>

{{/if}}

<div>
  <br />
  {{#link-to 'categories' classNames="btn btn-warning"}}See list of Categories{{/link-to}}
</div>


<div class="col-md-4">
  <h2>Budget spots in this category</h2>
    {{#each item in items itemController="item"}}
    <p>
      {{#link-to 'item' item}}
      address: {{item.name}}<br />
      subject: {{item.cost}}
      {{/link-to}}
    </p>

    {{/each}}

    <p>{{#link-to 'new-item' this class="btn btn-success"}}Create New budget spot{{/link-to}}</p>
</div>

<div class="col-md-8">

  {{outlet}}

</div>
